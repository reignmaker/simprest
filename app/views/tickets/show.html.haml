- model_class = Ticket
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @ticket.user
%p
  %strong= model_class.human_attribute_name(:key) + ':'
  %br
  = @ticket.key

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), user_tickets_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_ticket_path(@user, @ticket), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), user_ticket_path(@user, @ticket), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
